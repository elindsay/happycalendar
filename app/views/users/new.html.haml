.signup
  = form_for @user do |f|
    - if @user.errors.any?
      - @user.errors.full_messages.each do |msg|
        = msg

    .name
      = f.label :name
      = f.text_field :name
    .email
      = f.label :email
      = f.text_field :email
    .password
      = f.label :password
      = f.password_field :password
    .password_confirmation
      = f.label :password_confirmation
      = f.password_field :password_confirmation
    .submit
      = f.submit
